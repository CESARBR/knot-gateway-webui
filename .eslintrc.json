{
  // ES5
  "extends": "airbnb/legacy",
  "rules": {
    // It is a common practice in AngularJS code to reassign $scope
    "no-param-reassign": ["error", { "ignorePropertyModificationsFor": ["$scope"] }],
    "spaced-comment": ["error", "always", { "markers": ["global", ","]}],
    "new-cap": ["error", { "capIsNewExceptions": ["Router"]}]
  }
}
