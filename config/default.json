{
  "mongodb": {
    "host": "localhost",
    "port": 27017,
    "db": "knot_web"
  },
  "knotd": {
    "configFile": "/etc/knot/gatewayConfig.json"
  },
  "nrfd": {
    "devicesFile": "/etc/knot/keys.json"
  },
  "fog": {
    "envFile": "/usr/local/bin/knot-fog-source/.env",
    "port" : 3000,
    "host" : "localhost"
  },
  "server": {
    "port": 80,
    "token": {
      "secret": null, // auto generated when not specified
      "expiration": 7200 // 2h in seconds
    }
  },
  "log": {
    "console": false,
    "syslog": true,
    "level": "info"
  },
  "owner": {
    "user": "knot",
    "group": "knot"
  }
}
