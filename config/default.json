{
  "mongodb": {
    "host": "localhost",
    "port": 27017,
    "db": "knot_web"
  },
  "knotd": {
    "configFile": "/etc/knot/gatewayConfig.json"
  },
  "nrfd": {
    "devicesFile": "/etc/knot/keys.json"
  },
  "fog": {
    "port" : 8081,
    "host" : "localhost"
  },
  "connector": {
    "configFile": "/usr/local/bin/knot-fog-connector/config/default.json"
  },
  "server": {
    "port": 80,
    "token": {
      "secret": null, // auto generated when not specified
      "expiration": 7200 // 2h in seconds
    }
  },
  "log": {
    "console": false,
    "syslog": true,
    "level": "info"
  },
  "runAs": {
    "user": "knot",
    "group": "knot"
  }
}
